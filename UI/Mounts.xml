<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011 Mike Battersby -->

<Script file="Mounts.lua" />

<Frame name="LiteMountMountsPanel" hidden="true" inherits="LiteMountOptionsPanelTemplate" mixin="LiteMountMountsPanelMixin">

    <Frames>
        <Frame parentKey="MountsContainer" inherits="LiteMountContainerStyleTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="8" y="-61" />
                <Anchor point="BOTTOMRIGHT" x="-8" y="48" />
            </Anchors>
        </Frame>
        <ScrollFrame parentKey="ScrollBox" inherits="WoWScrollBoxList" mixin="LiteMountMountScrollBoxMixin" frameStrata="HIGH">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.MountsContainer" x="12" y="-44" />
                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.MountsContainer" x="-30" y="8" />
            </Anchors>
        </ScrollFrame>
        <EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar" frameStrata="HIGH">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="8" y="0"/>
                <Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="8" y="0"/>
            </Anchors>
        </EventFrame>
        <!-- PanelTabButtonTemplate adds to parent.Tabs automatically. Classic requires name. -->
        <Button name="$parentTab1" inherits="PanelTabButtonTemplate" id="1" />
        <Button name="$parentTab2" inherits="PanelTabButtonTemplate" id="2" />
        <DropdownButton parentKey="ActionDropdown" inherits="WoWStyle1FilterDropdownTemplate">
            <Size x="93" y="22" />
            <Anchors>
                <Anchor point="TOPRIGHT" relativeKey="$parent.MountsContainer" relativePoint="BOTTOMRIGHT" x="-8" y="-4" />
            </Anchors>
            <KeyValues>
                <KeyValue key="resizeToText" type="boolean" value="false"/>
            </KeyValues>
        </DropdownButton>

    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <FontString parentKey="RarityLabel" inherits="GameFontWhiteSmall" justifyH="CENTER" text="LM_RARITY">
                <Anchors>
                    <Anchor point="BOTTOM" relativeKey="$parent.ScrollBox" relativePoint="TOP" x="0" y="4" />
                </Anchors>
            </FontString>
            <FontString parentKey="GroundLabel" inherits="GameFontWhiteSmall" justifyH="CENTER" text="LM_GROUND">
                <Anchors>
                    <Anchor point="BOTTOM" relativeKey="$parent.ScrollBox" relativePoint="TOP" x="64" y="4" />
                </Anchors>
            </FontString>
            <FontString parentKey="PriorityLabel" inherits="GameFontWhiteSmall" justifyH="CENTER" text="LM_PRIORITY">
                <Anchors>
                    <Anchor point="BOTTOM" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="-102" y="4" />
                </Anchors>
            </FontString>
        </Layer>
        <Layer level="OVERLAY">
            <FontString parentKey="Counts" inherits="GameFontNormal">
                <Anchors>
                    <Anchor point="BOTTOM" y="8" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Scripts>
        <OnLoad method="OnLoad" inherit="append" />
        <OnShow method="OnShow" inherit="append" />
        <OnHide method="OnHide" inherit="append" />
    </Scripts>

</Frame>

</Ui>

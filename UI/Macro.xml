<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011 Mike Battersby -->

<Script file="Macro.lua" />

<Frame name="LiteMountMacroTabTemplate" inherits="PanelTopTabButtonTemplate" mixin="LiteMountMacroTabMixin" virtual="true">
    <Scripts>
        <OnClick method="OnClick" />
    </Scripts>
</Frame>

<Frame name="LiteMountMacroPanel" hidden="true" inherits="LiteMountOptionsPanelTemplate" mixin="LiteMountMacroPanelMixin">

    <Scripts>
        <OnLoad method="OnLoad" />
        <OnShow method="OnShow" />
    </Scripts>

    <Frames>
        <Frame parentKey="Class" inherits="LiteMountContainerStyleTemplate">
            <Size x="172" />
            <Anchors>
                <Anchor point="TOPLEFT" x="0" y="-164" />
                <Anchor point="BOTTOM" y="16" />
            </Anchors>
            <Frames>
                <ScrollFrame parentKey="ScrollBox" inherits="WoWScrollBoxList" mixin="LiteMountGroupsPanelGroupScrollBoxMixin">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-8" />
                        <Anchor point="BOTTOMRIGHT" x="-8" y="8" />
                    </Anchors>
                </ScrollFrame>
                <EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar" frameStrata="HIGH">
                    <KeyValues>
                        <KeyValue key="hideIfUnscrollable" value="true" type="boolean" />
                    </KeyValues>
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.ScrollBox" x="-2" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.ScrollBox" x="-2" y="0"/>
                    </Anchors>
                </EventFrame>
            </Frames>
        </Frame>

        <Frame parentKey="Macro" inherits="LiteMountContainerStyleTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.Class" relativePoint="TOPRIGHT" />
                <Anchor point="BOTTOMRIGHT" x="-16" y="16" />
            </Anchors>
            <Frames>
                <EditBox parentKey="EditBox" multiLine="true" letters="255" autoFocus="false" countInvisibleLetters="true" mixin="LiteMountMacroEditBoxMixin">
                    <Scripts>
                        <OnEscapePressed function="EditBox_ClearFocus" />
                        <OnTextChanged method="OnTextChanged" />
                    </Scripts>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="16" y="-96" />
                        <Anchor point="BOTTOMRIGHT" x="-16" y="64" />
                    </Anchors>
                    <FontString inherits="GameFontHighlight" />
                    <Frames>
                        <Frame parentKey="NineSlice" inherits="NineSlicePanelTemplate" useParentLevel="true" alpha="0.4">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="-8" y="8" />
                                <Anchor point="BOTTOMRIGHT" x="8" y="-8" />
                            </Anchors>
                        </Frame>
                    </Frames>
                </EditBox>

                <Button parentKey="DeleteButton" inherits="UIPanelButtonTemplate" text="DELETE">
                    <Size x="96" y="22" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeKey="$parent.EditBox" x="-8" y="-11" />
                    </Anchors>
                </Button>
            </Frames>
            <Layers>
                <Layer level="ARTWORK">
                    <FontString parentKey="ExplainText" inherits="GameFontNormal" justifyV="TOP" justifyH="LEFT">
                        <Anchors>
                            <Anchor point="TOP" y="-16" />
                            <Anchor point="LEFT" x="24" />
                            <Anchor point="RIGHT" x="-24" />
                        </Anchors>
                    </FontString>
                    <FontString inherits="GameFontHighlightSmall" text="ENTER_MACRO_LABEL">
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeKey="$parent.EditBox" x="8" y="11" />
                        </Anchors>
                    </FontString>

                    <FontString parentKey="Count" inherits="GameFontHighlightSmall">
                        <Anchors>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.EditBox" y="-11" />
                        </Anchors>
                    </FontString>
                </Layer>
            </Layers>
        </Frame>

        <Button id="1" inherits="LiteMountMacroTabTemplate" text="Unavailable">
            <KeyValues>
                <Keyvalue key="minWidth" value="57" type="number" />
            </KeyValues>
            <Anchors>
                <Anchor point="BOTTOMLEFT" relativeKey="$parent.Macro" relativePoint="TOPLEFT" x="16" />
            </Anchors>
        </Button>
        <Button id="2" inherits="LiteMountMacroTabTemplate" text="Combat">
            <KeyValues>
                <Keyvalue key="minWidth" value="57" type="number" />
            </KeyValues>
        </Button>
    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <FontString parentKey="WarnText" inherits="GameFontNormal" justifyV="TOP" justifyH="LEFT" text="LM_MACRO_NOT_ALLOWED">
                <Color r="1" g="0.5" b="0.5" />
                <Anchors>
                    <Anchor point="TOP" y="-60" />
                    <Anchor point="LEFT" x="24" />
                    <Anchor point="RIGHT" x="-24" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
</Frame>

</Ui>

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011-2019 Mike Battersby -->

<Frame name="LiteMountOptions" hidden="true" inherits="LiteMountOptionsPanelTemplate">
    <Layers>
        <Layer level="ARTWORK">
            <FontString name="$parentTagline" parentKey="Tagline" inherits="GameFontHighlight" justifyH="LEFT" text="LM_SETTINGS_TAGLINE">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentTitle" y="-16" x="16" />
                    <Anchor point="RIGHT" />
                </Anchors>
            </FontString>

            <FontString name="$parentVersionText" parentKey="VersionText" inherits="GameFontNormal" justifyH="RIGHT" text="GAME_VERSION_LABEL">
                <Anchors>
                    <Anchor point="TOPLEFT" x="72" y="-96" />
                </Anchors>
            </FontString>

            <FontString name="$parentVersion" parentKey="Version" inherits="GameFontHighlight" justifyH="LEFT">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.VersionText" relativePoint="RIGHT" x="4" />
                </Anchors>
            </FontString>

            <FontString name="$parentAuthorText" parentKey="AuthorText" inherits="GameFontNormal" justifyH="RIGHT" text="LM_AUTHOR">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.VersionText" relativePoint="BOTTOMRIGHT" y="-8" />
                </Anchors>
            </FontString>

            <FontString name="$parentAuthor" parentKey="Author" inherits="GameFontHighlight" justifyH="LEFT">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.AuthorText" relativePoint="RIGHT" x="4" />
                </Anchors>
            </FontString>

            <FontString name="$parentHelpTranslate" parentKey="HelpTranslate" inherits="GameFontNormal" justifyH="LEFT" text="LM_HELP_TRANSLATE">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentTitle" x="16" />
                    <Anchor point="TOP" relativeKey="$parent.AuthorText" relativePoint="BOTTOM" y="-48" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
    <Frames>
            <EditBox name="$parentTranslateURL" parentKey="TranslateURL" autoFocus="false" ignoreArrows="true">
                <Size y="16" />
                <Fontstring inherits="GameFontHighlight" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.HelpTranslate" relativePoint="BOTTOMLEFT" y="-8" x="16" />
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        self:SetText(self.url)
                    </OnShow>
                    <OnTextChanged>
                        self:SetText(self.url)
                        self:HighlightText()
                    </OnTextChanged>
                    <OnEditFocusGained>
                        self:HighlightText()
                    </OnEditFocusGained>
                    <OnEscapePressed function="EditBox_ClearFocus" />
                </Scripts>
            </EditBox>
    </Frames>
    <Layers>
        <Layer level="ARTWORK">
            <FontString name="$parentTranslatorsText" parentKey="TranslatorsText" inherits="GameFontNormal" justifyH="RIGHT" text="LM_TRANSLATORS">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.AuthorText" />
                    <Anchor point="TOP" relativeKey="$parent.TranslateURL" relativePoint="BOTTOM" y="-48" />
                </Anchors>
            </FontString>

            <FontString name="$parentTranslators" parentKey="Translators" inherits="GameFontHighlight" spacing="8" justifyH="LEFT">
                <Color r="0.8" g="1" b="0.8" a="1" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.TranslatorsText" relativePoint="TOPRIGHT" x="4" />
                </Anchors>
            </FontString>

        </Layer>
    </Layers>

    <Scripts>
        <OnLoad>
            local translators = {
                "deDE - pas06, Salty",
                "esMX - ",
                "esES - TradOrtiz, Valdesca",
                "frFR - Joured, lastdans",
                "itIT - ",
                "koKR - yuk6196",
                "ptBR - Kalx_",
                "ruRU - ",
                "zhCN - okaydud, wowuicn",
                "zhTW - BNSSNB, yunrong"
            }

            self.Version:SetText(GetAddOnMetadata("LiteMount", "Version") or "")
            self.Author:SetText(GetAddOnMetadata("LiteMount", "Author") or "")
            self.Translators:SetText(table.concat(translators, "\n"))

            self.TranslateURL.url = 'https://www.curseforge.com/wow/addons/litemount/localization'

            LiteMountOptionsPanel_OnLoad(self)
        </OnLoad>
    </Scripts>
</Frame>

</Ui>

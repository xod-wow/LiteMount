<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011 Mike Battersby -->

<Script file="Rules.lua" />

<Frame name="LiteMountRulesPanel" hidden="true" inherits="LiteMountOptionsPanelTemplate" mixin="LiteMountRulesPanelMixin">

    <KeyValues>
        <KeyValue key="name" value="BRAWL_TOOLTIP_RULES" type="global" />
    </KeyValues>

    <Frames>
        <Frame parentKey="Container" inherits="LiteMountContainerStyleTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-132" />
                <Anchor point="BOTTOMRIGHT" x="-16" y="40" />
            </Anchors>
        </Frame>

        <!-- PanelTabButtonTemplate adds to parent.Tabs automatically. Classic requires name. -->
        <Button name="$parentTab1" inherits="PanelTabButtonTemplate" id="1" />
        <Button name="$parentTab2" inherits="PanelTabButtonTemplate" id="2" />

        <DropdownButton parentkey="BindingDropDown" inherits="WoWStyle1DropdownTemplate">
            <Size x="192" y="26" />
            <Anchors>
                <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeKey="$parent.Container" x="0" y="8" />
            </Anchors>
        </DropdownButton>

        <Frame parentKey="Rules" inherits="LiteMountRulesTabRulesTemplate" hidden="true">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.Container" x="8" y="-8" />
                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Container" x="-8" y="8" />
            </Anchors>
        </Frame>
        <Frame parentKey="Advanced" inherits="LiteMountRulesTabAdvancedTemplate" hidden="true">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.Container" x="8" y="-8" />
                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Container" x="-8" y="8" />
            </Anchors>
        </Frame>
    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <FontString parentKey="ExplainText" inherits="GameFontNormal" justifyV="TOP" justifyH="LEFT" text="LM_RULES_EXP">
                <Anchors>
                    <Anchor point="TOP" y="-60" />
                    <Anchor point="LEFT" x="24" />
                    <Anchor point="RIGHT" x="-24" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Scripts>
        <OnLoad method="OnLoad" inherit="append"/>
        <OnShow method="OnShow" inherit="append" />
        <OnHide method="OnHide" inherit="append"/>
    </Scripts>
</Frame>

</Ui>
